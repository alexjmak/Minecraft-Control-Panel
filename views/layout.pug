block variables
doctype html
html
    head
        title= "Minecraft Control Panel"
        link(rel='stylesheet', type='text/css', href='/stylesheets/material-components-web.min.css')
        link(rel='stylesheet', type='text/css', href='/Material-Icons/material-icons.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/layout.css')
        script.
            let currentUsername = "#{username}";
        script(type='text/javascript', src='/javascripts/jquery-3.3.1.js')
        script(type='text/javascript', src='/javascripts/jquery.md5.js')
        script(type='text/javascript', src='/javascripts/jquery.cookie.js')
        script(type='text/javascript', src='/javascripts/material-components-web.min.js')
        script(type='text/javascript', src='/javascripts/jquery.cookie.js')
        script(type='text/javascript', src='/javascripts/jwtParser.js')
        script(type='text/javascript', src='/javascripts/requests.js')
        script(type='text/javascript', src='/javascripts/dialog.js')
        script(type='text/javascript', src='/javascripts/snackbar.js')
        block header
        script(type='text/javascript', src='/javascripts/layout.js')
    body
        header.mdc-top-app-bar.mdc-top-app-bar--fixed
            .mdc-top-app-bar__row.mdc-elevation--z1
                section.mdc-top-app-bar__section.mdc-top-app-bar__section--align-start
                    button.mobile.material-icons.mdc-top-app-bar__navigation-icon.mdc-ripple(style="color: white; background-color: transparent; border: none; outline: none") menu
                section.mdc-top-app-bar__section.mdc-top-app-bar__section--align-end
                    h3(id="currentUsername", style="font-weight: normal; cursor: pointer;")= username
                    button#accountButton.material-icons(type='submit' style="float: right; font-size: 36px; color: white; background-color: transparent; border: none; outline: none") perm_identity

        block drawer

        .mdc-drawer-scrim

        .mdc-drawer-app-content.mdc-top-app-bar--fixed-adjust
            #accountCard.mdc-card.mdc-elevation--z10(style="display:none; z-index:1;position:absolute;width: 300px; float:right; right: 0px; margin-right: 10px;padding-bottom: 10px; padding-left: 16px; margin-top: 10px")
                div
                    div(style="padding-right: 16px;")
                        i.material-icons.mdc-list-item__graphic(style='display:inline; float: left; font-size: 64px') account_circle
                        h2.selectable.mdc-typography.mdc-typography--headline6(style="text-align: right; margin-bottom: 0")= username
                        h3.selectable.mdc-typography.mdc-typography--subtitle2(style="text-align: right; margin-top: 0")

                    .mdc-card__action-buttons(style="float: right; padding-right: 7px;")
                        a(href="/accounts")
                            button.mdc-button.mdc-card__action.mdc-card__action--button(style="float: right") Account
                        a(href="/logout")
                            button.mdc-button.mdc-card__action.mdc-card__action--button(style="float: right") Logout
            block content

