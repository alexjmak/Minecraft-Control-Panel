extends layout

block content
    style.
        @import url("/public/roboto.css");
        body {
            font-family: Roboto, Arial, Helvetica, sans-serif;
            background-color: #f7f7f7;
        }
        div {
            height: 175px;
            width: 500px;
            background-color: white;
            border: 0.5px solid gray;
            border-radius: 10px;
            box-shadow: 2px 2px 5px grey;
            margin: 0 auto;
        }
        h1 {
            text-align: center;
        }
        p {
            text-align: center;
            font-size: 20px;
        }
    div
        h1= title
        p Error #{status} - #{message}
        br
