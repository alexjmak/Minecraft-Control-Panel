extends layout

block header
    link(rel='stylesheet', type='text/css', href='/stylesheets/update.css')
    script(type= "text/javascript", src= "/javascripts/update.js")

block drawer
    aside.mdc-drawer.mdc-top-app-bar--fixed-adjust.mdc-drawer--modal
        .mdc-drawer__header
            h3.mdc-drawer__title Minecraft Control Panel
            h6.mdc-drawer__subtitle= hostname
        .mdc-drawer__content
            nav.mdc-list
                a.mdc-list-item.mdc-list-item--activated(href='/')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') code
                    span.mdc-list-item__text Console
                a.mdc-list-item(href='/properties')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') list
                    span.mdc-list-item__text Server Properties
                a.mdc-list-item(href='/accounts')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') account_circle
                    span.mdc-list-item__text Account Manager
                a.mdc-list-item(href='/files')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') folder
                    span.mdc-list-item__text File Manager
                .mdc-list-divider
                a.mdc-list-item(href='/logout')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') launch
                    span.mdc-list-item__text Logout

block content
    .box.mdc-card.mdc-elevation--z8
        h2#title.mdc-typography.mdc-typography--headline4 Update
        h3#computername.mdc-typography.mdc-typography--subtitle2= hostname
        .mdc-text-field
            input#server.mdc-text-field__input(type='text' tabindex=1 autocomplete='off' autocapitalize="none")
            .mdc-line-ripple
            label.mdc-floating-label Server
        p#message
        br
        button#submit.mdc-button.mdc-button--raised Submit