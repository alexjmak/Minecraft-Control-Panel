extends layout

block header
    link(rel='stylesheet', type='text/css', href='/stylesheets/fileViewer.css')
    script.
        let filePath = "#{file.path}";
    script(type='text/javascript', src= "/javascripts/fileViewer.js")

block drawer
    aside.mdc-drawer.mdc-top-app-bar--fixed-adjust
        .mdc-drawer__header
            h3.mdc-drawer__title
            h6.mdc-drawer__subtitle= hostname
        .mdc-drawer__content
            nav.mdc-list
                a.mdc-list-item.mdc-list-item--activated(href='/files')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') folder
                    span.mdc-list-item__text File Manager
                a.mdc-list-item#edit(style="display:none")
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') edit
                    span.mdc-list-item__text Edit
                a.mdc-list-item#download
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') cloud_download
                    span.mdc-list-item__text Download
                a.mdc-list-item#delete
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') delete
                    span.mdc-list-item__text Delete
                .mdc-list-divider
                a.mdc-list-item(href='/')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') code
                    span.mdc-list-item__text Console
                a.mdc-list-item(href='/properties')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') list
                    span.mdc-list-item__text Server Properties
                a.mdc-list-item(href='/accounts')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') account_circle
                    span.mdc-list-item__text Account Manager
                .mdc-list-divider
                a.mdc-list-item(href='.')#back
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') arrow_back
                    span.mdc-list-item__text Back
                a.mdc-list-item#logout
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') launch
                    span.mdc-list-item__text Logout


block content
    div#content(hidden)


    #authorization.box.mdc-card.mdc-elevation--z8(style="display: none")
        .demo-card__primary
            #title.demo-card__title.mdc-typography.mdc-typography--headline4 Password Required
        br
        .mdc-text-field
            input#password.mdc-text-field__input(type='password' tabindex=1)
            .mdc-line-ripple
            label.mdc-floating-label Password
        p#message
        button#submit.mdc-button.mdc-button--raised Submit
